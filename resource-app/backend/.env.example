# Server Configuration
PORT=8082
GIN_MODE=debug # Set to release in production

# Database Configuration (Separate Fields)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=resource_app

# Database Configuration (Alternative: Full URL)
# If DATABASE_URL is set, it takes precedence over the separate fields above
# DATABASE_URL=root:password@tcp(localhost:3306)/resource_app?charset=utf8mb4&parseTime=True&loc=Local

# Authentication
# URL to fetch JWKS for JWT validation (e.g., from Auth0, Cognito, or internal auth service)
# JWKS_URL=https://your-auth-domain/.well-known/jwks.json

# CORS Configuration
# ALLOWED_ORIGINS=http://localhost:3000,https://myapp.com
